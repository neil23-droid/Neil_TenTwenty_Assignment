<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_grey_1"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/moviePosterIV"
        android:layout_width="90dp"
        android:layout_height="0dp"
        android:src="@drawable/jaws_poster"
        android:scaleType="fitCenter"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintDimensionRatio="W,1.5:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/divider"/>

    <TextView
        android:id="@+id/movieNameTxt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:maxLines="2"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/movieReleaseDateTxt"
        app:layout_constraintEnd_toStartOf="@+id/guideline"
        app:layout_constraintStart_toEndOf="@id/moviePosterIV"
        app:layout_constraintTop_toTopOf="@id/moviePosterIV"
        app:layout_constraintVertical_chainStyle="packed"
        tools:text="Jaws" />



    <TextView
        android:id="@+id/movieReleaseDateTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toTopOf="@id/adultsOnlyTxt"
        app:layout_constraintStart_toEndOf="@id/moviePosterIV"
        app:layout_constraintTop_toBottomOf="@id/movieNameTxt"
        tools:text="21 Aug 2021" />

    <TextView
        android:id="@+id/adultsOnlyTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="16dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/moviePosterIV"
        app:layout_constraintStart_toEndOf="@id/moviePosterIV"
        app:layout_constraintTop_toBottomOf="@id/movieReleaseDateTxt"
        tools:text="Adult" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.73" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bookMovieeCL"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:background="@drawable/rectangular_bg_blue_border"
        app:layout_constraintStart_toEndOf="@id/guideline"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/moviePosterIV"
        app:layout_constraintBottom_toBottomOf="@id/moviePosterIV">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Book"
            android:textSize="16sp"
           android:paddingStart="18dp"
            android:paddingEnd="18dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:gravity="center"
            android:textColor="@color/design_default_color_primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginEnd="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintStart_toEndOf="@id/moviePosterIV"
        app:layout_constraintTop_toBottomOf="@id/moviePosterIV"
        app:layout_constraintEnd_toEndOf="@id/bookMovieeCL"
        app:layout_constraintBottom_toBottomOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>