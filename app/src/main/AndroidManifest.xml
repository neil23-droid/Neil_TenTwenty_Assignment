<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.themoviesapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TheMoviesApp">
        <activity
            android:name=".BookedTicketHistory.BookedTicketHistoryActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.TheMoviesApp.NoActionBar">

        </activity>
        <activity
            android:name=".BookTicket.BookTicketActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.TheMoviesApp.NoActionBar" />
        <activity
            android:name=".MovieDetail.MovieDetailsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.TheMoviesApp.NoActionBar" />
        <activity
            android:name=".MoviesListing.MoviesListingActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.TheMoviesApp.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>